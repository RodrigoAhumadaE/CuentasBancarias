@{
    ViewData["Title"] = "Detalle cuenta";
}
@model List<Transaccion>

@await Html.PartialAsync("_Navbar")
<div class="detalle">
    <div class="titulo">
        <h2>Bienvenido @Context.Session.GetString("Nombre")</h2>
    </div>
    <div class="saldo">
        <h3>Saldo actual: @Context.Session.GetInt32("Saldo")</h3>
    </div>
    <div class="trans">
        @if(@Model == null){
            <table>
                <thead>
                    <tr>
                        <th>Cantidad</th>
                        <th>Fecha</th>
                    </tr>
                </thead>
                <tbody>
                
                    <h4>Sin transacciones</h4>
        }else{
                    @foreach(Transaccion trans in @Model){
                        <tr>
                            <td>@trans.Cantidad</td>
                        </tr>
                        <tr>
                            <td>@trans.FechaCreacion</td>
                        </tr>
                    }
                </tbody>            
            </table>        
        }
    </div>
</div>